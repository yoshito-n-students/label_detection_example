<launch>
    <!-- -->
    <!-- label detection + drawing -->
    <node name="label_node" pkg="nodelet" type="nodelet" args="manager" output="screen"/>
    <!-- -->
    <!-- label detector loader -->
    <node name="label_detector_loader" pkg="nodelet" type="nodelet" 
          args="load label_detection/LabelDetector label_node" output="screen">
        <remap from="image_raw" to="image_raw"/>
        <remap from="image_out" to="image_label"/>
        <remap from="labels_out" to="labels"/>
        <rosparam subst_value="true">
            image_transport: raw
            desired_encoding: bgr8
            reference_directory: $(find label_detection_example)/result_file/
            parameter_file: $(find label_detection_example)/param_file/affine_sift.yml
            match_stripes: -1.
            match_ratio: 0.015
            republish_image: true
        </rosparam>
    </node>
    <!-- -->
    <!-- detection result drawer loader -->
    <node name="label_drawer_loader" pkg="nodelet" type="nodelet" 
          args="load object_drawer/ObjectDrawer label_node" output="screen">
        <remap from="image_raw" to="image_label"/>
        <remap from="objects_in" to="labels"/>
        <remap from="image_out" to="image_annotated"/>
    </node>
    <!-- -->
    <!-- detection result viewer -->
    <node name="label_view" pkg="image_view" type="image_view" output="screen">
        <remap from="image" to="image_annotated"/>
    </node>
</launch>